<!--detail.wxml-->
<map id="map"  scale="15" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" 
polyline="{{polyline}}" circles="{{circles}}"
bindmarkertap="markertap" bindregionchange="regionchange"  
show-location style="width: 100%; height: 300px"></map>
<view class="box">
  <text class="title">运单信息</text>
  <view class="not-finished" wx:if="{{!order.isFinished}}">正在进行</view>
  <view class="text">
    ({{order.latitudeStart}}, {{order.longtitudeStart}}) 运往 ({{order.latitudeEnd}}, {{order.longtitudeEnd}})<br/>
  </view>
  <view class="text">
  期望时间：{{order.scheduledStartTime}} ~ {{order.scheduledEndTime}}<br/>
  </view>
  <view class="text">
    送货人：{{order.senderName}} {{order.senderPhone}} {{order.senderAddress}}
  </view>
  <view class="text">
    收货人：{{order.receiverName}} {{order.receiverPhone}} {{order.receiverAddress}}
  </view>
</view>
<view class="box">
  <text class="title">车辆信息</text>
  <view class="text">
    {{car.carNo}}
  </view>
  <view class="text">
    速度：{{car.speed}}km/h<br/>
  </view>
  <view class="text">
    历程：{{car.mileague}}km<br/>
  </view>
  <view class="text">
    温度：{{car.temprature}}°C<br/>
  </view>
</view>
<view class="box">
  <text class="title">驾驶员信息</text>
  <view class="text">
    {{driver.username}} {{driver.sex}}
  </view>
  <view class="text">
    驾照类型：{{driver.driverType}}<br/>
  </view>
  <view class="text">
    工号：{{driver.jobNo}}<br/>
  </view>
</view>